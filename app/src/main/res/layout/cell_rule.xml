<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.whut.driving_test_system.models.eneities.Rule" />
        <variable name="rule" type="Rule"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/rule_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:text="@{rule.ruleId}"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/rule_nickname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rule_nickname"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rule_nickname" />

        <Button
            android:id="@+id/rule_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/edit_rule"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/rule_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="6dp"
            android:ems="10"
            android:inputType="textLongMessage|textPersonName"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text="@{rule.nickname}"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/rule_content"
            app:layout_constraintEnd_toStartOf="@+id/rule_content"
            app:layout_constraintStart_toEndOf="@+id/rule_id"
            app:layout_constraintTop_toTopOf="@+id/rule_content" />

        <EditText
            android:id="@+id/rule_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:editable="true"
            android:ellipsize="start"
            android:ems="10"
            android:inputType="textLongMessage|textMultiLine|textPersonName|textImeMultiLine"
            android:text="@{rule.content}"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/rule_value"
            app:layout_constraintEnd_toStartOf="@+id/rule_value"
            app:layout_constraintStart_toEndOf="@+id/rule_nickname"
            app:layout_constraintTop_toTopOf="@+id/rule_value" />

        <EditText
            android:id="@+id/rule_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@{rule.value}"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/rule_first_threshold_key"
            app:layout_constraintEnd_toStartOf="@+id/rule_first_threshold_key"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/rule_content"
            app:layout_constraintTop_toTopOf="@+id/rule_first_threshold_key" />

        <EditText
            android:id="@+id/rule_first_threshold_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="18dp"
            android:ems="10"
            android:inputType="textMultiLine|textPersonName|textImeMultiLine"
            android:text="@{rule.firstThresholdKey}"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/rule_first_threshold_value"
            app:layout_constraintEnd_toStartOf="@+id/rule_first_threshold_value"
            app:layout_constraintStart_toEndOf="@+id/rule_value"
            app:layout_constraintTop_toTopOf="@+id/rule_first_threshold_value"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/rule_first_threshold_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="19dp"
            android:ems="10"
            android:inputType="textMultiLine|textPersonName|textImeMultiLine"
            android:text="@{rule.firstThresholdValue}"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/rule_second_threshold_key"
            app:layout_constraintEnd_toStartOf="@+id/rule_second_threshold_key"
            app:layout_constraintStart_toEndOf="@+id/rule_first_threshold_key"
            app:layout_constraintTop_toTopOf="@+id/rule_second_threshold_key" />

        <EditText
            android:id="@+id/rule_second_threshold_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="2dp"
            android:ems="10"
            android:inputType="textLongMessage|textMultiLine|textPersonName"
            android:text="@{rule.secondThresholdKey}"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/rule_second_threshold_value"
            app:layout_constraintEnd_toStartOf="@+id/rule_second_threshold_value"
            app:layout_constraintStart_toEndOf="@+id/rule_first_threshold_value"
            app:layout_constraintTop_toTopOf="@+id/rule_second_threshold_value" />

        <EditText
            android:id="@+id/rule_second_threshold_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:inputType="textMultiLine|textPersonName"
            android:text="@{rule.secondThresholdValue}"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/is_auto"
            app:layout_constraintEnd_toStartOf="@+id/is_auto"
            app:layout_constraintStart_toEndOf="@+id/rule_second_threshold_key"
            app:layout_constraintTop_toTopOf="@+id/is_auto" />

        <Switch
            android:id="@+id/is_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:checked="@{rule.isAuto}"
            app:layout_constraintBottom_toBottomOf="@+id/is_select"
            app:layout_constraintEnd_toStartOf="@+id/is_select"
            app:layout_constraintStart_toEndOf="@+id/rule_second_threshold_value"
            app:layout_constraintTop_toTopOf="@+id/is_select" />

        <Switch
            android:id="@+id/is_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="125dp"
            android:checked="@{rule.isSelected}"
            app:layout_constraintBottom_toBottomOf="@+id/rule_edit_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/is_auto"
            app:layout_constraintTop_toTopOf="@+id/rule_edit_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>